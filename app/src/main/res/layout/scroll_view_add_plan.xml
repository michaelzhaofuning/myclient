<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.qczb.myclient.view.MyEditLinearLayout
        android:layout_width="match_parent"
        app:titleOfMyEditLinearLayout="标题"
        app:decoratedDrawable="@mipmap/lock"
        app:formNameOfMyEditLinearLayout="title"
        android:layout_height="wrap_content">

    </com.qczb.myclient.view.MyEditLinearLayout>
    <com.qczb.myclient.view.MyEditLinearLayout
        android:layout_width="match_parent"
        app:titleOfMyEditLinearLayout="时间"
        app:decoratedDrawable="@mipmap/lock"
        app:formNameOfMyEditLinearLayout="time"
        android:layout_height="wrap_content">

    </com.qczb.myclient.view.MyEditLinearLayout>
    <com.qczb.myclient.view.MyEditLinearLayout
        android:layout_width="match_parent"
        android:id="@+id/title"
        app:titleOfMyEditLinearLayout="内容"
        app:decoratedDrawable="@mipmap/lock"
        app:formNameOfMyEditLinearLayout="content"
        android:layout_height="wrap_content">

    </com.qczb.myclient.view.MyEditLinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/commit"
        android:onClick="commit"
        android:layout_gravity="center_horizontal" />


</LinearLayout>