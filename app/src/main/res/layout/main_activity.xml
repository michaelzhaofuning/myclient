<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"
        android:layout_weight="10">


    </FrameLayout>

    <View android:layout_width="match_parent" android:layout_height="1px" android:background="@android:color/darker_gray"
          android:layout_above="@+id/nav_footer" android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
        android:id="@+id/view" />

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/nav_footer"
            android:layout_width="match_parent"
            android:layout_height="52dp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/bar0"
                android:gravity="center">
            <ImageView
                    android:id="@+id/imageView_bar0" style="@style/nav_footer_image_view"
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginBottom="5dp"

                android:layout_marginTop="7dp"
                android:scaleType="centerCrop" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划"
                    android:id="@+id/textView_bar0"
                    android:textSize="@dimen/nav_footer_text_size"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:gravity="center" android:layout_height="fill_parent"
                      android:layout_weight="1" android:id="@+id/bar1">
            <ImageView
                    android:id="@+id/imageView_bar1" style="@style/nav_footer_image_view"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="执行"
                    android:id="@+id/textView_bar1"
                    android:textSize="@dimen/nav_footer_text_size"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:gravity="center"
                      android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/bar2">
            <ImageView
                    android:id="@+id/imageView_bar2" style="@style/nav_footer_image_view"
                android:layout_width="25dp"
                android:layout_marginBottom="5dp"
                android:layout_height="25dp"
                android:scaleType="centerCrop" />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户"
                    android:id="@+id/textView_bar2"
                    android:textSize="@dimen/nav_footer_text_size"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>